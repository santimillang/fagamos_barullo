<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never">
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:text="Engade unha foto"
            android:textColor="@color/secondaryTextColor"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/yourName"
            android:layout_height="wrap_content"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10sp"
            android:text="Selecciona unha foto e dalle un nome ben barulleiro"
            android:layout_width="match_parent"
            android:textSize="28sp" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_width="match_parent"
            android:text="Foto"
            android:textStyle="bold"
            android:textColor="@color/secondaryTextColor" />

        <ImageButton
            android:id="@+id/add_photo_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:scaleType="centerCrop"
            android:minHeight="140sp"
            android:minWidth="110sp"
            android:maxHeight="140sp"
            android:maxWidth="110sp"
            android:layout_marginTop="16sp"
            android:layout_marginBottom="20sp"
            android:background="@drawable/my_image"
            android:elevation="8sp" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_width="match_parent"
            android:text="Descrición"
            android:textStyle="bold"
            android:textColor="@color/secondaryTextColor" />

        <EditText
            android:id="@+id/photo_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="1"
            android:maxLines="1"
            android:background="@drawable/edittext_bg"
            android:padding="10sp"
            android:layout_marginTop="16sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:hint="Título da imaxe"/>

        <Button
            android:id="@+id/add_photo_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@color/secondaryTextColor"
            android:text="Engadir"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="40sp"
            android:layout_marginRight="40sp"/>

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyle"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25sp"
            android:layout_marginBottom="20sp"
            android:visibility="gone" />
    </LinearLayout>
</ScrollView>