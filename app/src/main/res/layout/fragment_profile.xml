<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:overScrollMode="never">

    <LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_height="wrap_content"
            android:layout_marginRight="20sp"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="20sp"
            android:layout_width="match_parent"
            android:text="Ola de novo,"
            android:textColor="@color/secondaryTextColor"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/yourName"
            android:layout_height="wrap_content"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10sp"
            android:text="Usuario"
            android:layout_width="match_parent"
            android:textSize="28sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/profile_image"
                android:layout_marginRight="20sp"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="20sp"
                android:maxHeight="120sp"
                android:maxWidth="120sp"
                android:adjustViewBounds="true"
                android:layout_width="120sp"
                android:layout_height="120sp"
                android:elevation="8sp"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_image" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginLeft="30sp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gústame"
                        android:textStyle="bold"
                        android:textColor="@color/secondaryTextColor" />

                    <TextView
                        android:id="@+id/followers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="40sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gústalle"
                        android:textStyle="bold"
                        android:textColor="@color/secondaryTextColor" />

                    <TextView
                        android:id="@+id/following"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0" />
                </LinearLayout>
            </LinearLayout>

                <TextView
                    android:id="@+id/bt_follow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16sp"
                    android:text="GÚSTAME"
                    android:layout_marginBottom="12sp"
                    android:padding="10sp"
                    android:elevation="8sp"
                    android:gravity="center"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp"
                    android:textColor="@color/secondaryTextColor"
                    android:background="@drawable/edittext_bg" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:text="Descrición"
            android:textStyle="bold"
            android:textColor="@color/secondaryTextColor" />

        <TextView
            android:id="@+id/profile_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="16sp"
            android:text="@string/sen_descricion" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp"
        android:text="Instrumentos"
        android:textStyle="bold"
        android:textColor="@color/secondaryTextColor" />

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/flexbox_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="14sp"
            android:paddingBottom="6sp"
            app:flexWrap="wrap">

            <TextView
                android:id="@+id/voz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voz"
                android:elevation="8sp"
                android:layout_marginBottom="16sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="2sp"
                android:gravity="center"
                android:background="@drawable/pill_bg" />

            <TextView
                android:id="@+id/batera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Batera"
                android:elevation="8sp"
                android:layout_marginBottom="16sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="2sp"
                android:gravity="center"
                android:background="@drawable/pill_bg" />

            <TextView
                android:id="@+id/baixo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Baixo"
                android:elevation="8sp"
                android:layout_marginBottom="16sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="2sp"
                android:gravity="center"
                android:background="@drawable/pill_bg" />

            <TextView
                android:id="@+id/guitarra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guitarra"
                android:elevation="8sp"
                android:layout_marginBottom="16sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="2sp"
                android:gravity="center"
                android:background="@drawable/pill_bg" />

            <TextView
                android:id="@+id/teclado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teclado"
                android:elevation="8sp"
                android:layout_marginBottom="16sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="2sp"
                android:gravity="center"
                android:background="@drawable/pill_bg" />

            <TextView
                android:id="@+id/trompeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trompeta"
                android:elevation="8sp"
                android:layout_marginBottom="16sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="2sp"
                android:gravity="center"
                android:background="@drawable/pill_bg" />

            <TextView
                android:id="@+id/violin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Violín"
                android:elevation="8sp"
                android:layout_marginBottom="16sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="2sp"
                android:gravity="center"
                android:background="@drawable/pill_bg" />

            <TextView
                android:id="@+id/saxofon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saxofón"
                android:elevation="8sp"
                android:layout_marginBottom="16sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="2sp"
                android:gravity="center"
                android:background="@drawable/pill_bg" />

            <TextView
                android:id="@+id/outro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Outro"
                android:elevation="8sp"
                android:layout_marginBottom="16sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="2sp"
                android:gravity="center"
                android:background="@drawable/pill_bg" />

            <TextView
                android:id="@+id/ningun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ningún"
                android:elevation="8sp"
                android:layout_marginBottom="16sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="2sp"
                android:gravity="center"
                android:background="@drawable/pill_bg" />
        </com.google.android.flexbox.FlexboxLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp"
        android:text="Fotos"
        android:textStyle="bold"
        android:textColor="@color/secondaryTextColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fotos_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:overScrollMode="never">
            </androidx.recyclerview.widget.RecyclerView>
            <TextView
                android:id="@+id/sen_fotos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16sp"
                android:layout_marginBottom="20sp"
                android:layout_marginLeft="20sp"
                android:text="Sen fotos."/>
        </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp"
        android:text="Maquetas"
        android:textStyle="bold"
        android:textColor="@color/secondaryTextColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:elevation="8sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="16sp"
            android:layout_marginBottom="20sp"
            android:id="@+id/l_maqueta1"
            android:visibility="gone"
            android:background="@drawable/my_rect">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/maqueta_1"
                    android:scaleType="centerCrop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="170sp"
                    android:maxHeight="170sp"
                    android:minWidth="170sp"
                    android:maxWidth="170sp"
                    android:background="@drawable/my_image"/>

                <ImageButton
                    android:id="@+id/play_bt_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="50sp"
                    android:minHeight="50sp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_baseline_play_circle_filled_24"
                    android:background="@null"/>
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="1"
                android:maxLines="1"
                android:id="@+id/titulo_1"
                android:layout_margin="6sp"
                android:text="Título"/>
        </LinearLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:elevation="8sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="16sp"
            android:layout_marginBottom="20sp"
            android:id="@+id/l_maqueta2"
            android:visibility="gone"
            android:background="@drawable/my_rect">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/maqueta_2"
                    android:scaleType="centerCrop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="170sp"
                    android:maxHeight="170sp"
                    android:minWidth="170sp"
                    android:maxWidth="170sp"
                    android:background="@drawable/my_image"/>

                <ImageButton
                    android:id="@+id/play_bt_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="50sp"
                    android:minHeight="50sp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_baseline_play_circle_filled_24"
                    android:background="@null"/>
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="1"
                android:maxLines="1"
                android:id="@+id/titulo_2"
                android:layout_margin="6sp"
                android:text="Título"/>
        </LinearLayout>

        <TextView
            android:id="@+id/sen_maquetas"
            android:layout_marginTop="16sp"
            android:layout_marginLeft="20sp"
            android:layout_marginBottom="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sen maquetas." />
    </LinearLayout>

</LinearLayout>
</ScrollView>