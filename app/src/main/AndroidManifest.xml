<?xml version="1.0" encoding="utf-8"?>
<manifest package="dev.santieinaki.fagamosbarullo"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".app.GlobalApplication"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".app.module.register.Register"></activity>
        <activity android:name=".app.module.addmp3.AddMp3Activity" />
        <activity android:name=".app.module.addphoto.AddPhotoActivity" />
        <activity android:name=".app.module.licenses.Licenses" />
        <activity android:name=".app.module.accountsettings.AccountSettings" />
        <activity android:name=".app.module.profile.Profile" />
        <activity android:name=".app.module.profilesettings.ProfileSettings" />
        <activity android:name=".app.module.splashscreen.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".app.module.main.MainActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".app.module.login.Login" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>